	<label>RankDir:
	<select name="rankdir" >
		<option value="rankdir=TB;" selected="selected" >TB (top -> bottom)</option>
		<option value="rankdir=LR;">LR (left -> right)</option>
	</select>
	</label>
	 
	<label>Default Shape:<select name="shape"  >{$list-shapes}</select></label>
